extends layout

block content
  h4 #[u #{events.length}] Event(s) with #[u #{popups.length}] Pop-up(s) listed and counting...
  each event in events
    h3 Event # #{event.id}: #{event.name}
    p #[strong Location]: #{event.location}
    p #[strong Date]: #{event.date}
    p #[strong Space Host]: #{event.host}

    h3 Pop-ups:
    each popup in popups
      ul
        li #[strong #{popup.title}] performed by #[em #{popup.host}]
    p Organizer:
    each host in hosts
      ul
        li #[strong #{host.firstName} #{host.lastName}], Phone: #{host.phoneNumber}, Email: #{host.email}
    p Guests:
    each guest in guests
      ul
        li #[strong #{guest.firstName} #{guest.lastName}], Email: #{guest.email}
